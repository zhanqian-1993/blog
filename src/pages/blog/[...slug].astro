---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
	<article class="blog-post">
    <header class="post-header">
      <h1 class="post-title">{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('zh-CN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })}
        </time>
        {post.data.updatedDate && (
          <span class="updated">
            (更新于 {post.data.updatedDate.toLocaleDateString('zh-CN')})
          </span>
        )}
      </div>
      {post.data.tags.length > 0 && (
        <div class="tags">
          {post.data.tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/" class="back-link">← 返回文章列表</a>
    </footer>
  </article>
</Layout>

<style>
  .blog-post {
    padding-top: 20px;
  }

  .post-header {
    margin-bottom: 48px;
    padding-bottom: 32px;
    border-bottom: 1px solid #e8e8e8;
  }

  .post-title {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 16px;
    letter-spacing: -0.5px;
  }

  .post-meta {
    font-size: 14px;
    color: #888;
    margin-bottom: 16px;
  }

  .updated {
    color: #bbb;
  }

  .tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 12px;
    color: #666;
    background: #f0f0f0;
    padding: 4px 10px;
    border-radius: 4px;
  }

  .content {
    font-size: 16px;
    line-height: 1.8;
    color: #333;
  }

  .content :global(h2) {
    font-size: 24px;
    font-weight: 600;
    margin: 48px 0 20px;
    letter-spacing: -0.3px;
  }

  .content :global(h3) {
    font-size: 20px;
    font-weight: 600;
    margin: 36px 0 16px;
  }

  .content :global(p) {
    margin-bottom: 20px;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 20px 0;
    padding-left: 24px;
  }

  .content :global(li) {
    margin-bottom: 8px;
  }

  .content :global(code) {
    font-family: 'SF Mono', Monaco, Consolas, monospace;
    font-size: 0.9em;
    background: #f5f5f5;
    padding: 2px 6px;
    border-radius: 4px;
  }

  .content :global(pre) {
    background: #1e1e1e;
    color: #d4d4d4;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(blockquote) {
    border-left: 4px solid #ddd;
    margin: 24px 0;
    padding: 12px 20px;
    background: #fafafa;
    color: #555;
  }

  .content :global(img) {
    max-width: 100%;
    border-radius: 8px;
    margin: 24px 0;
  }

  .post-footer {
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px solid #e8e8e8;
  }

  .back-link {
    font-size: 14px;
    color: #666;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: #1a1a1a;
  }
</style>
