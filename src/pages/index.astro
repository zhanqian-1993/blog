---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const tag = Astro.url.searchParams.get('tag');

const posts = allPosts
  .filter((post) => !tag || (post.data.tags && post.data.tags.includes(tag)))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 获取所有标签
const allTags = [...new Set(allPosts.flatMap((post) => post.data.tags || []))];
---

<Layout title="zhanqian - 博客">
	<div class="posts">
    <header class="header">
      <h1 class="title">文章</h1>
      <p class="subtitle">技术积累 | 知识沉淀</p>

      {tag && (
        <div class="filter-bar">
          <span class="filter-label">筛选标签: <strong>#{tag}</strong></span>
          <a href="/" class="clear-filter">清除筛选</a>
        </div>
      )}

      {!tag && allTags.length > 0 && (
        <div class="tag-cloud">
          {allTags.map((t) => (
            <a href={`/?tag=${t}`} class="tag-link">{t}</a>
          ))}
        </div>
      )}
    </header>

    <div class="post-list">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="post-card">
          <article>
            <h2 class="post-title">{post.data.title}</h2>
            <p class="post-desc">{post.data.description}</p>
            <div class="post-meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('zh-CN', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              {post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.map((t) => (
                    <a href={`/tags/${t}`} class="tag" class:list={{ active: t === tag }}>#{t}</a>
                  ))}
                </div>
              )}
            </div>
          </article>
        </a>
      ))}
    </div>

    {posts.length === 0 ? (
      <div class="empty">
        <p>{tag ? `没有找到标签 #${tag} 的文章` : '暂无文章'}</p>
        {tag && <a href="/" class="back-link">返回全部文章</a>}
        {!tag && <p class="hint">在 src/content/blog/ 目录下添加 Markdown 文件即可</p>}
      </div>
    ) : (
      tag && <a href="/" class="show-all">显示全部文章</a>
    )}
  </div>
</Layout>

<style>
  .posts {
    padding-top: 20px;
  }

  .header {
    margin-bottom: 40px;
  }

  .title {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 8px;
    letter-spacing: -0.5px;
  }

  .subtitle {
    font-size: 15px;
    color: #888;
  }

  .filter-bar {
    margin-top: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .filter-label {
    font-size: 14px;
    color: #666;
  }

  .clear-filter {
    font-size: 14px;
    color: #999;
    text-decoration: none;
    border-bottom: 1px solid #ddd;
  }

  .clear-filter:hover {
    color: #666;
    border-bottom-color: #666;
  }

  .tag-cloud {
    margin-top: 16px;
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .tag-link {
    font-size: 14px;
    color: #888;
    transition: color 0.2s;
  }

  .tag-link:hover {
    color: #1a1a1a;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .post-card {
    display: block;
    padding: 28px 32px;
    background: #fff;
    border: 1px solid #e8e8e8;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .post-card:hover {
    border-color: #d5d5d5;
    box-shadow: 0 1px 4px rgba(0,0,0,0.05);
  }

  .post-card article {
    display: block;
  }

  .post-title {
    font-size: 19px;
    font-weight: 600;
    margin-bottom: 10px;
    color: #1a1a1a;
    line-height: 1.5;
  }

  .post-desc {
    font-size: 14px;
    color: #666;
    margin-bottom: 16px;
    line-height: 1.6;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 13px;
    color: #aaa;
  }

  .post-meta time {
    color: #aaa;
  }

  .tags {
    display: flex;
    gap: 8px;
  }

  .tag {
    color: #aaa;
    font-size: 13px;
    transition: color 0.2s;
  }

  .tag:hover {
    color: #666;
  }

  .tag.active {
    color: #1a1a1a;
  }

  .empty {
    text-align: center;
    padding: 80px 0;
    color: #999;
  }

  .back-link, .show-all {
    display: inline-block;
    margin-top: 24px;
    color: #666;
    font-size: 14px;
    border-bottom: 1px solid #ddd;
  }

  .back-link:hover, .show-all:hover {
    color: #1a1a1a;
    border-bottom-color: #1a1a1a;
  }

  .hint {
    font-size: 13px;
    margin-top: 8px;
    color: #bbb;
  }
</style>
