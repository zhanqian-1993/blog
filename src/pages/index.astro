---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog');
const tag = Astro.url.searchParams.get('tag');

const posts = allPosts
  .filter((post) => !tag || (post.data.tags && post.data.tags.includes(tag)))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 获取所有标签
const allTags = [...new Set(allPosts.flatMap((post) => post.data.tags || []))];
---

<Layout title="zhanqian - 博客">
	<div class="posts">
    <header class="header">
      <h1 class="title">文章</h1>
      <p class="subtitle">技术积累 | 知识沉淀</p>

    </header>

    <div class="post-list">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}/`} class="post-card">
          <h2 class="post-title">{post.data.title}</h2>
          <p class="post-desc">{post.data.description}</p>
          <div class="post-meta">
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map((t) => (
                  <span class="tag">#{t}</span>
                ))}
              </div>
            )}
          </div>
        </a>
      ))}
    </div>

    {posts.length === 0 && (
      <div class="empty">
        <p>{tag ? `没有找到标签 "${tag}" 的文章` : '暂无文章'}</p>
        {tag && <a href="/" class="back-link">返回全部</a>}
      </div>
    )}
  </div>
</Layout>

<style>
  .posts {
    padding-top: 20px;
  }

  .header {
    margin-bottom: 32px;
  }

  .title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 6px;
    letter-spacing: -0.5px;
  }

  .subtitle {
    font-size: 14px;
    color: #999;
    margin-bottom: 0;
  }

  .tag-cloud {
    margin-top: 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .tag-link {
    font-size: 14px;
    color: #888;
    transition: color 0.2s;
  }

  .tag-link:hover {
    color: #333;
  }

  .filter-bar {
    margin-top: 20px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .filter-label {
    font-size: 14px;
    color: #666;
  }

  .clear-filter {
    font-size: 13px;
    color: #999;
    text-decoration: underline;
  }

  .clear-filter:hover {
    color: #333;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .post-card {
    display: block;
    padding: 28px 32px;
    background: #fff;
    border: 1px solid #e8e8e8;
    border-radius: 8px;
    transition: all 0.15s ease;
  }

  .post-card:hover {
    border-color: #ccc;
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  }

  .post-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #1a1a1a;
    line-height: 1.5;
  }

  .post-desc {
    font-size: 14px;
    color: #666;
    margin-bottom: 16px;
    line-height: 1.6;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 13px;
    color: #aaa;
  }

  .post-meta time {
    color: #aaa;
  }

  .tags {
    display: flex;
    gap: 8px;
  }

  .tag {
    color: #aaa;
    font-size: 13px;
  }

  .empty {
    text-align: center;
    padding: 60px 0;
    color: #999;
  }

  .back-link {
    display: inline-block;
    margin-top: 16px;
    color: #666;
    font-size: 14px;
    text-decoration: underline;
  }

  .back-link:hover {
    color: #333;
  }
</style>
